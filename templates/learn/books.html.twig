{% extends "base.html.twig" %}

{% block title %}Learn | Livres{% endblock %}




{% block body %}
  
  {% include "learn/_learn_navigation.html.twig" %}

  <p class="text-danger">La méthode de la requête est {{ method }}</p>
  <p class="text-danger">La valeur de $_GET['action'] est {{ action }}</p>

  <h1>Livres</h1>

  <div class="row">
    {% for book in books %}
      <div class="col-4">
        <div class="card px-2 py-3 mb-2">
          <h5 class="bg-hero text-light p-1 rounded rounded-3">{{ book.title }}</h5>
          <h6 class="text-secondary text-end">{{ book.author }}</h6>
          <p>{{ book.summary }}</p>
          <p>{{ book.datePublish | date('d/m/Y') }}</p>
          <a href="/learn/books/{{book.id}}">Voir plus...</a>
        </div>
      </div>
    {% endfor %}
  </div>


{% endblock %}