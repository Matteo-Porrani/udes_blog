{% extends 'base.html.twig' %}

{% block title %}
  Ajout Catégorie
{% endblock title %}

{% block body %}

  {{ form_start(form) }}

    {{ form_errors(form) }}

    <div class="mb-3">
      {{ form_label(form.name, null, { 'attr': { 'class': 'form-label' }}) }}
      {{ form_widget(form.name, { 'attr': { 'class': 'form-control' }}) }}
    </div>

    {{ form_rest(form) }}


    <button type="submit" class="btn btn-outline-primary">Ajouter Catégorie</button>
  {{ form_end(form) }}

{% endblock %}