{% extends "back/index.html.twig" %}

{% block title %}Liste Personne{% endblock %}

{% block back_content %}

  <h4>Liste des personnes</h4>


  <div class="row">
    {% for p in persons %}

      <div class="col-4 mb-2">
        <div class="card p-2">
          <small class="text-secondary fw-bold fs-3">{{ p.id }}</small>
          <h4>{{ p.lsName ~ ' ' ~ p.fsName }}</h4>
          <h5 class="text-info">{{ p.team }}</h5>
          <p>{{ p.notes }}</p>

            {% if p.confirmed %} 
              <p><span class="badge rounded-pill bg-success">Confirm√©</span></p>
            {% else %}
              <p><span class="badge rounded-pill bg-warning text-dark">En attente</span></p>
              
            {% endif %}

            <a href="{{ path("back_person_edit", { 'id': p.id }) }}" class="btn btn-outline-warning w-50 mb-2">Modifier</a>
            <a href="#" class="btn btn-outline-danger w-50 mb-2">Supprimer</a>

        </div>
      </div>

    {% endfor %}
  </div>


{% endblock %}